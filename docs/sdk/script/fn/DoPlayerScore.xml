<funcs>
	<func>
		<title>DoPlayerScore</title>
		<category>Spieler</category>
		<version>4.6.5.0 CP</version>
		<syntax>
			<rtype>bool</rtype>
			<params>
				<param><type>int</type><name>player</name><desc>Spielernummer des Spielers, dessen Punktewert verändert werden soll</desc></param>
				<param><type>int</type><name>change</name><desc>Positiv oder negativ: Die Veränderung des Punktewertes</desc></param>
			</params>
		</syntax>
		<desc>Verändert den Punktewert eines Spielers.</desc>
		<examples>
			<example>
				<code>DoScore(0, -100);</code>
				<text>Zieht dem Spieler 100 Punkte ab.</text>
			</example>
		</examples>
		<related>
			<funclink>GetPlayerScore</funclink>
			<funclink>GetPlayerScoreGain</funclink>
		</related>
	</func>
	<author>Sven2</author><date>November 2001</date>
